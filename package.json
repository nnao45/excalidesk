{
    "name": "excalidesk",
    "version": "0.1.1",
    "description": "Excalidraw desktop app with MCP server integration",
    "author": "nnao45",
    "license": "Apache-2.0",
    "scripts": {
        "start": "vite build --config vite.config.ts && electrobun dev",
        "dev": "electrobun dev",
        "dev:hmr": "concurrently \"bun run hmr\" \"bun run start\"",
        "hmr": "vite --config vite.config.ts",
        "build": "vite build --config vite.config.ts && electrobun build",
        "build:canary": "vite build --config vite.config.ts && electrobun build --env=canary",
        "build:mcp": "esbuild src/bun/mcp/mcp-server.ts --bundle --platform=node --format=cjs --outfile=dist/mcp-server.js"
    },
    "dependencies": {
        "@excalidraw/excalidraw": "^0.17.6",
        "@excalidraw/mermaid-to-excalidraw": "^1.1.3",
        "@modelcontextprotocol/sdk": "^1.0.4",
        "cors": "^2.8.5",
        "electrobun": "latest",
        "express": "^4.21.2",
        "lucide-react": "^0.575.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "ws": "^8.18.0",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/react": "^18.3.18",
        "@types/react-dom": "^18.3.5",
        "@types/ws": "^8.5.13",
        "@vitejs/plugin-react": "^4.3.4",
        "concurrently": "^9.0.0",
        "esbuild": "^0.24.0",
        "typescript": "^5.6.2",
        "vite": "^6.0.3",
        "vitest": "^3.2.1"
    },
    "engines": {
        "bun": ">=1.0"
    }
}
